<!-- views/create.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Seat</title>
  <link rel="stylesheet" type="text/css" href="/styles/create-seat.css">
</head>

<body>
  <%- include('header.ejs') %>
  <h2>Create Seat</h2>

  <!-- Form Section -->
  <form action="/admin/createSeat" method="post">
    <label for="seatNumber">Number of a new seat:</label>
    <input type="number" id="seatNumber" name="seatNumber" required>
    <br>
    <label for="amount">Amount:</label>
    <input type="number" id="amount" name="cost" required>
    <br>
    <label for="type">Type:</label>
    <input type="text" id="type" name="type">
    <br>
    <button type="submit">Submit</button>
  </form>

  <!-- Table Section -->
  <h2>Seat Data</h2>
  
  <% if (seatData && seatData.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>ID</th>
          <th>Seat number</th>
          <th>Cost</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        <!-- Loop through your seat data and populate the table rows -->
        <% seatData.forEach(seat => { %>
          <tr>
            <td>
              <!-- Form for delete button -->
              <form action="/admin/deleteSeat" method="post" style="display:inline;">
                <input type="hidden" name="deleteId" value="<%= seat.id %>">
                <button type="submit">Delete</button>
              </form>
            </td>
            <td><%= seat.id %></td>
            <td><%= seat.seatNumber %></td>
            <td><%= seat.cost %></td>
            <td><%= seat.type %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No seat data available.</p>
  <% } %>

</body>

</html>
