<!-- views/table.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservation Table</title>
    <link rel="stylesheet" type="text/css" href="/styles/reservations-table.css">
</head>

<body>
    <%- include('header.ejs') %>
    <h2>Reservation Table</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Reserved from</th>
                <th>Reserved to</th>
                <th>Amount</th>
                <th>Seat name</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            <% reservations.forEach(reservation => { %>
                <tr>
                    <td><%= reservation.id %></td>
                    <td><%= reservation.reservedFrom %></td>
                    <td><%= reservation.reservedTo %></td>
                    <td><%= reservation.totalAmountToPay %></td>
                    <td><%= reservation.seat %></td>
                    <td><%= reservation.userId %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>
